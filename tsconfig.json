{
    "compilerOptions": {
      "baseUrl": "./",
      "declaration": true,
      "stripInternal": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": false,
      "outDir": "./release",
      "rootDir": ".",
      "lib": [
        "es2017",
        "dom"
      ],
      "target": "ES2022",
      "skipLibCheck": true,
      "types": [
        "node",
        "jest"
      ],
      "paths": {
        "@ng-state/immer-data-strategy": [
          "release/immer-data-strategy/public-api.d.ts"
        ],
        "@ng-state/immutablejs-data-strategy": [
          "release/immutablejs-data-strategy/public-api.d.ts"
        ],
        "@ng-state/data-strategy": [
          "release/data-strategy/public-api.d.ts"
        ],
        "@ng-state/store": [
          "release/ng-state/public-api.d.ts"
        ],
        "@angular/*": [
          "./node_modules/@angular/*"
        ],
        "immer/*": [
          "./node_modules/immer/*"
        ]
      },
      "useDefineForClassFields": false
    },
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {
        "preserveWhitespaces": false
    }
}