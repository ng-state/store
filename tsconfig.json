{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "outDir": "./release",
        "rootDir": ".",
        "lib": [
            "es2017",
            "dom"
        ],
        "target": "es2020",
        "skipLibCheck": true,
        "types": [
            "node",
            "jest"
        ],
        "paths": {
            "@ng-state/immer-data-strategy": [
                "release/immer-data-strategy"
            ],
            "@ng-state/immutablejs-data-strategy": [
                "release/immutablejs-data-strategy"
            ],
            "@ng-state/data-strategy": [
                "release/data-strategy"
            ],
            "@ng-state/store": [
                "release/ng-state"
            ],
            "@angular/*": [
                "./node_modules/@angular/*"
            ],
            "immer/*": [
                "./node_modules/immer/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {
        "preserveWhitespaces": false,
        "enableIvy": false
    }
}