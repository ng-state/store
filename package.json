{
    "name": "ng-state",
    "version": "4.3.0",
    "module": "./index.js",
    "scripts": {
        "ngc": "ngc",
        "tsc": "tsc",
        "test": "jest --verbose",
        "start": "ng serve --port 4203",
        "build:prod": "ng build --prod --project=example-app",
        "build:server:prod": "ng run example-app:server:prod",
        "compile:server": "tsc -p server.tsconfig.json",
        "build:ssr:prod": "npm run build:prod && npm run build:server:prod && npm run compile:server",
        "serve:ssr": "set NODE_ENV=production&&node dist/server",
        "serve:prod": "http-server dist/browser",
        "build:ng-state": "ng build ng-state && cpy logo.png LICENSE README.md dist/ng-state",
        "build:data-strategy": "ng build data-strategy && cpy logo.png dist/data-strategy",
        "build:immer-data-strategy": "ng build immer-data-strategy && cpy logo.png dist/immer-data-strategy",
        "build:immutablejs-data-strategy": "ng build immutablejs-data-strategy && cpy logo.png dist/immutablejs-data-strategy",
        "build:strategies": "npm run build:data-strategy && npm run build:immer-data-strategy && npm run build:immutablejs-data-strategy"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.13.6",
        "@angular-devkit/build-ng-packagr": "^0.13.6",
        "@angular/animations": "^7.1.4",
        "@angular/common": "^7.1.4",
        "@angular/compiler": "^7.1.4",
        "@angular/compiler-cli": "^7.1.4",
        "@angular/core": "^7.1.4",
        "@angular/forms": "^7.1.4",
        "@angular/http": "^7.1.4",
        "@angular/platform-browser": "^7.1.4",
        "@angular/platform-browser-dynamic": "^7.1.4",
        "@angular/platform-server": "^7.1.4",
        "@angular/pwa": "^0.13.6",
        "@angular/router": "^7.1.4",
        "@angular/service-worker": "^7.1.4",
        "@ng-state/data-strategy": "^1.0.3",
        "@ng-state/immer-data-strategy": "^1.0.0",
        "@ng-state/immutablejs-data-strategy": "^1.0.0",
        "@nguniversal/common": "^7.1.1",
        "@nguniversal/express-engine": "^7.1.1",
        "@nguniversal/module-map-ngfactory-loader": "^7.1.1",
        "@types/es6-shim": "^0.31.32",
        "@types/faker": "^4.1.5",
        "@types/jest": "^24.0.11",
        "@types/node": "^6.0.38",
        "bootstrap": "^4.3.1",
        "core-js": "^2.6.1",
        "cpy-cli": "^1.0.1",
        "del-cli": "^1.1.0",
        "domino": "^2.1.3",
        "express": "^4.16.3",
        "faker": "^4.1.0",
        "hammerjs": "^2.0.8",
        "http-server": "^0.11.1",
        "immer": "^3.1.1",
        "immutable": "^3.8.1",
        "immutable-cursor": "^2.0.1",
        "jest": "^24.5.0",
        "ng-packagr": "^4.1.1",
        "ngx-take-until-destroy": "^5.4.0",
        "rxjs": "6.3.2",
        "ts-jest": "^24.0.0",
        "ts-node": "1.2.1",
        "tsickle": "^0.35.0",
        "tslib": "^1.9.0",
        "tslint": "^5.7.0",
        "typescript": "3.1.6",
        "zone.js": "^0.8.18"
    },
    "jest": {
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testRegex": "(spec/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverage": false,
        "coverageReporters": [
            "lcov",
            "text"
        ],
        "coverageDirectory": "tests-coverage",
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "./spec/localstorage.mock.ts"
        ],
        "modulePathIgnorePatterns": [
            "<rootDir>/dist/"
        ],
        "moduleNameMapper": {
            "^@ng-state/store$": "<rootDir>/dist/ng-state",
            "^@ng-state/(.*)$": "<rootDir>/dist/$1"
        }
    },
    "dependencies": {
        "user": "0.0.0"
    }
}
