{
  "name": "ng-state",
  "version": "4.3.0",
  "module": "./index.js",
  "scripts": {
    "ngc": "ngc",
    "tsc": "tsc",
    "test": "jest --verbose",
    "test:watch": "karma start --no-single-run --auto-watch --debug --browsers=ChromeDebug",
    "clean:pre": "rimraf release",
    "clean:post": "rimraf \"src/**/*.ngfactory.ts\"",
    "copy": "cpy LICENSE ./src/package.json README.md logo.png release",
    "build:js": "ngc -p tsconfig.dist.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:uglify": "uglifyjs -c --screw-ie8 --comments -o ./release/bundles/store.min.umd.js ./release/bundles/store.umd.js",
    "prebuild": "npm run clean:pre",
    "postbuild": "npm run clean:post && npm run copy",
    "build-rollup": "npm run build:js && npm run build:umd && npm run build:uglify",
    "build": "ng build --prod --project ng-state"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.6",
    "@angular-devkit/build-ng-packagr": "^0.13.6",
    "@angular/common": "^7.1.4",
    "@angular/compiler": "^7.1.4",
    "@angular/compiler-cli": "^7.1.4",
    "@angular/core": "^7.1.4",
    "@angular/platform-browser": "^7.1.4",
    "@angular/router": "^7.1.4",
    "@types/es6-shim": "^0.31.32",
    "@types/jest": "^23.3.3",
    "@types/node": "^6.0.38",
    "core-js": "^2.5.1",
    "cpy-cli": "^1.0.1",
    "immutable": "^3.8.1",
    "immutable-cursor": "^2.0.1",
    "jest": "^24.5.0",
    "ng-packagr": "^4.1.1",
    "rollup": "^0.34.13",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rxjs": "6.3.2",
    "ts-jest": "^24.0.0",
    "ts-loader": "^4.2.0",
    "tsickle": "^0.34.3",
    "tsify": "^3.0.1",
    "tslint": "^5.7.0",
    "typescript": "3.1.6",
    "uglifyjs": "^2.4.10",
    "zone.js": "^0.8.18"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(spec/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "tests-coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./spec/localstorage.mock.ts"
    ]
  },
  "dependencies": {
    "user": "0.0.0"
  }
}
