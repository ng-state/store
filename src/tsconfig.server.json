{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "module": "commonjs",
        "types": [
            "node"
        ],
        "paths": {
            "@ng-state/immer-data-strategy": [
                "../dist/immer-data-strategy"
            ],
            "@ng-state/immutablejs-data-strategy": [
                "../dist/immutablejs-data-strategy"
            ],
            "@ng-state/data-strategy": [
                "../dist/data-strategy"
            ],
            "@ng-state/store": [
                "../dist/ng-state"
            ],
        }
    },
    "exclude": [
        "**/*.spec.ts"
    ],
    "angularCompilerOptions": {
        "entryModule": "./app/app.server.module#AppServerModule"
    }
}